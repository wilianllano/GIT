create procedure usp_listar_pedidoscab
@idEmpleado int,
@fecha1 datetime,
@fecha2 datetime
as
select * from tb_pedidoscabe where IdEmpleado=@idEmpleado and FechaPedido between @fecha1 and @fecha2
